UNFSD_NFS_PORT ?=	$$[ UNFSD_PORT_BASE + 0 ]
UNFSD_MOUNT_PORT ?=	$$[ UNFSD_PORT_BASE + 1 ]
UNFSD_RPCNFSD_PORT ?=	$$[ UNFSD_PORT_BASE + 2 ]
UNFSD_RPCMOUNTD_PORT ?=	$$[ UNFSD_PORT_BASE + 3 ]
else
endif

