#! /bin/bash

DISTRIBUTION=$1
RELEASE=$2
P=$3

set -e

. ./setup

_opts=(
  -p "$P":22
  --hostname="${CONTAINER_HOSTNAME}"
  --name="${FINAL_NAME}_${DISTRIBUTION}"
)

for v in "${VOLUMES[@]}"; do
    eval set -- "$v"
    src=$1
    dst=${2:-$src}
    opt=${3:-}

    test x"$dst" != x- || dst=$src
    _opts+=( -v "$dst:$src$opt" )
done

exec setsid docker run "${_opts[@]}" \
     ${FINAL_NAME}:${DISTRIBUTION}
