#! /bin/bash

DISTRIBUTION=$1
RELEASE=$2
BASE_PORT=$3

set -e

. ./setup

_opts=(
  --restart=always
  --hostname="${CONTAINER_HOSTNAME}"
  --name="${FINAL_NAME}_${DISTRIBUTION}"
)

# there is no sense in using seccomp for SELinux enabled hosts and it
# breaks too much things (strace, ...)
! sestatus >/dev/null 2>/dev/null || \
    _opts+=( --security-opt seccomp:unconfined )

_next_port=
for p in "${PORTS[@]}"; do
    eval set -- "$p"
    src=$1
    dst=$2
    cnt=${3:-1}

    case $dst in
      next)
            dst=$_next_port;;
      base)
            dst=$BASE_PORT;;
    esac

    while test $cnt -gt 0; do
        _opts+=( -p "$dst":"$src" )

        let ++dst
        let ++src
        let --cnt || :
    done

    let ++dst
    _next_port=$dst
done

for v in "${VOLUMES[@]}"; do
    eval set -- "$v"
    src=$1
    dst=${2:-$src}
    opt=${3:-}

    test x"$dst" != x- || dst=$src
    _opts+=( -v "$dst:$src$opt" )
done

exec setsid docker run "${_opts[@]}" \
     ${FINAL_NAME}:${DISTRIBUTION}
