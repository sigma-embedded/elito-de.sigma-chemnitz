DISTRO		 = "elito"
DISTRO_RELEASE   = "@DISTRO_RELEASE@"
MACHINE		 = "@MACHINE@"

ELITO_WORKSPACE_DIR = "@ELITO_WORKSPACE_DIR@"
ELITO_CACHE_DIR  = "@ELITO_CACHE_DIR@"
ELITO_PROJECT_UUID = "@PROJECT_UUID@"
DL_DIR		 = "${ELITO_CACHE_DIR}/sources"
@ENABLE_SSTATE_DIR_TRUE@SSTATE_DIR	 = "@SSTATE_DIR@"

PROJECT_NAME	:= "@PROJECT_NAME@"
@ENABLE_BUILDBASE_DIR_TRUE@TMPDIR	:= "@BUILDBASE_DIR@"
@ENABLE_BUILDBASE_DIR_FALSE@TMPDIR	:= "${@os.path.normpath(os.path.join('${PROJECT_TOPDIR}',os.environ.get('W','tmp')))}"
OECORE_TOPDIR	?= "${ELITO_ROOTDIR}/org.openembedded.core"
OEMETA_TOPDIR	?= "${ELITO_ROOTDIR}/org.openembedded.meta"
ELITO_SIGNATURE_HANDLER = "@SIGNATURE_STYLE@"

SECWRAP_CMD = "@SECWRAP_CMD@"

@ENABLE_PERSISTENT_DIR_TRUE@PERSISTENT_DIR = "@PERSISTENT_DIR@"

@EXTRA_BBFILES_TRUE@BBFILES += " @EXTRA_BBFILES@"

ASSUME_PROVIDED += " @elito_assumed@"
EXTRA_NATIVE_PKGCONFIG_PATH = "@EXTRA_NATIVE_PKGCONFIG_PATH@"

WHICH = "@WHICH@"

PACKAGE_CLASSES = ""
@IPKG_TRUE@PACKAGE_CLASSES += "package_ipk"
@TAR_TRUE@PACKAGE_CLASSES += "package_tar"
@FETCHCMD_OPT_GIT_MIRROR_FALSE@FETCHCMD_OPT_GIT_MIRROR = "--mirror"

@NFSROOT_TRUE@IMAGE_ROOTFS_elito-nfsroot = "@nfs_rootdir@"
TFTPBOOT_DIR = "@tftpbootdir@"
TFTP_SERVER = "@TFTP_SERVER@"

CONF_VERSION = "1"

@ENABLE_CCACHE_TRUE@CCACHE_DISABLE[unexport] = "1"
# use fixed 'ccache' for now; this string is hardcoded at some places
# and do not expect full qualified paths hence
#@ENABLE_CCACHE_TRUE@CCACHE = "@CCACHE@ "
@ENABLE_CCACHE_TRUE@INHERIT += "ccache"

@ENABLE_CCACHE_FALSE@CCACHE[unexport] = "1"
@ENABLE_CCACHE_FALSE@CCACHE_DISABLE = "1"

@HAVE_GLOBAL_BITBAKE_CONF_TRUE@require @GLOBAL_BITBAKE_CONF@
@HAVE_LOCAL_BITBAKE_CONF_TRUE@require @LOCAL_BITBAKE_CONF@
include conf/local-local.conf
require conf/project.conf
