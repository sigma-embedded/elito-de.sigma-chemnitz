DISTRO		 = "elito"
MACHINE		 = "@MACHINE@"

DISTRO_TYPE	 = "@DISTRO_TYPE@"
ELITO_ROOTDIR	 = "@ELITO_ROOTDIR@"
DL_DIR		 = "@CACHE_DIR@/sources"

PROJECT_NAME	:= "@PROJECT_NAME@"
PROJECT_TOPDIR	:= "@abs_top_builddir@"
ELITO_TOPDIR	?= "${ELITO_ROOTDIR}/de.sigma-chemnitz"
OEDEV_TOPDIR	?= "${ELITO_ROOTDIR}/org.openembedded"

BBFILES    := "${OEDEV_TOPDIR}/recipes/*/*.bb"
BBFILES    += "${ELITO_TOPDIR}/recipes/*/*.bb"
BBFILES    += "${PROJECT_TOPDIR}/recipes/*/*.bb"

@EXTRA_BBFILES_TRUE@BBFILES += " @EXTRA_BBFILES@"

BBFILE_COLLECTIONS     += "elito"
BBFILE_PATTERN_elito    = "${ELITO_TOPDIR}"
BBFILE_PRIORITY_elito   =  100

BBFILE_COLLECTIONS     += "project"
BBFILE_PATTERN_project  = "${PROJECT_TOPDIR}"
BBFILE_PRIORITY_project =  200

ASSUME_PROVIDED += " @elito_assumed@"
EXTRA_NATIVE_PKGCONFIG_PATH = "@EXTRA_NATIVE_PKGCONFIG_PATH@"

ELITO_KERNEL_REF_REPO  = "@kernel_ref_repo@"
ELITO_DEVEL_COMPONENTS = "@devel_components@"

WHICH = "@WHICH@"

@IPKG_TRUE@INHERIT +=	"package_ipk"
@TAR_TRUE@INHERIT +=	"package_tar"

@NFSROOT_TRUE@IMAGE_ROOTFS = "@nfs_rootdir@"
TFTPBOOT_DIR = "@tftpbootdir@"

@HAVE_GLOBAL_BITBAKE_CONF_TRUE@require @GLOBAL_BITBAKE_CONF@
require conf/project.conf
