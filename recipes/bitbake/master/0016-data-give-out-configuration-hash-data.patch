Subject: [PATCH 16/16] data: give out configuration hash data

this helps to debug problems
---
 lib/bb/data_smart.py |   17 +++++++++++++++++
 1 files changed, 17 insertions(+), 0 deletions(-)

diff --git a/lib/bb/data_smart.py b/lib/bb/data_smart.py
index 4e73929..89c35be 100644
--- a/lib/bb/data_smart.py
+++ b/lib/bb/data_smart.py
@@ -32,6 +32,7 @@ import copy, re
 from collections import MutableMapping
 import logging
 import hashlib
+import time
 import bb, bb.codeparser
 from bb   import utils
 from bb.COW  import COWDictBase
@@ -473,4 +474,20 @@ class DataSmart(MutableMapping):
             value = self.getVar(key, False) or ""
             data = data + key + ': ' + str(value) + '\n'
 
+        if logger.level >= 0:
+            fname = os.path.join(self.getVar("TMPDIR", True) or ".",
+                                 "datahash");
+
+            try:
+                os.unlink(fname + ".prev")
+            except:
+                pass
+
+            try:
+                os.rename(fname + ".curr", fname + ".prev")
+            except:
+                pass
+
+            open(fname + ".curr","w").write(data)
+
         return hashlib.md5(data).hexdigest()
